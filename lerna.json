{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "package-lock.json"
      ],
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "push": false,
      "conventionalCommits": true,
      "changelog": false
    }
  },
  "ignoreChanges": [
    "**/lib/**",
    "**/es/**",
    "**/dist/**",
    "**/test/**",
    "**/stories/**",
    "**/*.md",
    "**/package-lock.json"
  ]
}
